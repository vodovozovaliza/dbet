generator client {
  provider = "prisma-client-js"
  output   = "../server/node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  wallet String   @unique  // Renamed from 'wallet' to match engine.js
  createdAt     DateTime @default(now())
  bets          Bet[]
}

model Match {
  id            String   @id @default(uuid())
  matchId       String   @unique // This is the OpenDota match ID
  startTime     DateTime?
  
  // SQLite compatibility: Arrays stored as Strings
  radiantHeroes String? 
  direHeroes    String?
  
  status        String   @default("PENDING")
  winner        String?
  bets          Bet[]
}

model Bet {
  id        String   @id @default(uuid())
  txHash    String   @unique
  
  amount    String
  pick      String
  market    String
  status    String   @default("PENDING")
  
  userId    String
  matchId   String
  
  user      User     @relation(fields: [userId], references: [id])
  match     Match    @relation(fields: [matchId], references: [id])
  
  createdAt DateTime @default(now())
}